    body(data-ng-app='ads18fApp')
        header(id="site-header" role="banner")
            .page-container
                h1#logo-medCheck.text-hide MedCheck.gov
        main(role="main")
            div(class="medlib" data-ng-controller='Ads18fController')
                form(novalidate role="search" class="page-container" name="drugCauseSymptom" data-ng-submit="submit()")
                    div(class="status collapse bg-danger" data-ng-class="{'in': (statusMessage !== '')}") {{statusMessage}}
                    p.form-group 
                        | Can <fill-in-the-blank label="Medicine" data-the-blank="drug" data-input-name="drug" data-typeahead-query-field="DRUG" data-set-validity="drugCauseSymptom.drug.$setValidity(validationErrorKey, isValid)"></fill-in-the-blank> cause <fill-in-the-blank label="Side Effect" data-the-blank="symptom" data-input-name="symptom" data-typeahead-query-field="SYMPTOM" data-set-validity="drugCauseSymptom.symptom.$setValidity(validationErrorKey, isValid)"></fill-in-the-blank>?
                        button(type="submit" class="btn btn-lg btn-primary") Find Out
            div(class="search-result-wrapper" data-ng-view="data-ng-view")

        footer(class="page-container" role="contentinfo" id="site-footer")
            p powered by <a href="https://open.fda.gov/" id="logo-openFDA" class="logo text-hide">openFDA</a> &amp; <a href="http://www.icfi.com/" id="logo-icf" class="logo text-hide">ICF International</a>
